@{
    var formatStr = (Model is String) ? Model : "yyyy-MM-dd";
}
<div class="form-group">
    <label for="dtStart" class="control-label">时间：</label>
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
        <input name="dtStart" id="dtStart" value="@Request["dtStart"]" dateformat="@formatStr" class="form-control form_datetime" />
    </div>
</div>
<div class="form-group">
    <label for="dtEnd" class="control-label">至</label>
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
        <input name="dtEnd" id="dtEnd" value="@Request["dtEnd"]" dateformat="@formatStr" class="form-control form_datetime" />
    </div>
</div>
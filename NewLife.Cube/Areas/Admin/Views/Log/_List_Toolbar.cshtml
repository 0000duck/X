@using NewLife;
@using NewLife.Web;
@using XCode;
@{
    var fact = ViewBag.Factory as IEntityOperate;
    var page = ViewBag.Page as Pager;
}
<div class="tableTools-container">
    <div class="form-inline">
        <form action="@Url.Action("index")@Html.Raw("?" + page.GetBaseUrl(false, true, true)) " method="post" role="form">
            @if (ManageProvider.User.Has(PermissionFlags.Insert))
            {
                @Html.ActionLink("添加" + ViewContext.Controller.GetType().GetDisplayName(), "Add", null, new { @class = "btn btn-success btn-sm" })
            }
            <div class="pull-right form-group">
                <div class="form-group">
                    <label for="category" class="control-label">类别：</label>
                    @Html.ForDropDownList("category", Log.FindAllCategoryName(), Request["category"], "全部", true)
                </div>
                <div class="form-group">
                    <label for="adminid" class="control-label">用户：</label>
                    @Html.ForDropDownList("adminid", UserX.FindAllWithCache(), "全部", true)
                </div>
                <div class="form-group">
                    <label for="dtStart" class="control-label">时间：</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        <input name="dtStart" id="dtStart" value="@Request["dtStart"]" dateformat="yyyy-MM-dd" class="form-control form_datetime" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="dtEnd" class="control-label">至</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        <input name="dtEnd" id="dtEnd" value="@Request["dtEnd"]" dateformat="yyyy-MM-dd" class="form-control form_datetime" />
                    </div>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="ace-icon fa fa-check"></i>
                    </span>
                    <input name="q" type="search" id="q" value="@Request["q"]" class="form-control" placeholder="搜索关键字" />
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-purple btn-sm">
                            <span class="ace-icon fa fa-search icon-on-right bigger-110"></span>
                            查询
                        </button>
                    </span>
                </div>

                <div class="btn-group">
                    <button data-toggle="dropdown" class="btn btn-info btn-sm dropdown-toggle" aria-expanded="false">
                        Info small
                        <span class="ace-icon fa fa-caret-down icon-on-right"></span>
                    </button>

                    <ul class="dropdown-menu dropdown-info dropdown-menu-right">
                        <li>
                            <a href="#">Action</a>
                        </li>

                        <li>
                            <a href="#">Another action</a>
                        </li>

                        <li>
                            <a href="#">Something else here</a>
                        </li>

                        <li class="divider"></li>

                        <li>
                            <a href="#">Separated link</a>
                        </li>
                    </ul>
                </div><!-- /.btn-group -->

            </div>
        </form>
    </div>
</div>

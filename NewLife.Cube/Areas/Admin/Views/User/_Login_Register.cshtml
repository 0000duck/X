

<div class="tab-pane fade" id="Register">
    <!-- Logo-->
    <div class="row text-center">
        <i class="glyphicon glyphicon-cloud login-logo center-block"></i>
    </div>
    <!-- 登录-->
    @using (Html.BeginForm("Register", "User", new { r = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "cube-login" }))
    {
        @Html.ValidationSummary()
        <span class="heading text-primary">新用户注册</span>
        <div class="form-group">
            <input type="email" class="form-control" id="email" name="email" placeholder="输入你的邮箱地址">
            <i class="glyphicon glyphicon-email"></i>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="username" name="username" placeholder="用户名">
            <i class="glyphicon glyphicon-user"></i>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="password" name="password" placeholder="密码">
            <i class="glyphicon glyphicon-user"></i>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="password2" name="password2" placeholder="重复密码">
            <i class="glyphicon glyphicon-user"></i>
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-default text-center">注册</button>
        </div>

    }
    <div class="toolbar clearfix text-center">
        <div class="row" style="padding:30px 60px 0 60px;">
            <div class="toolbar center">
                <a href="#Login" data-toggle="tab" style="float: right">
                    回到登录
                    <i class="ace-icon fa fa-arrow-right"></i>
                </a>
                <span style="float: right">已有账号？</span>
            </div>
        </div>
    </div>
</div>